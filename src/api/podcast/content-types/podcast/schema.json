{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "desc": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "audio",
        "video"
      ]
    },
    "media_url": {
      "type": "string"
    },
    "premium": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "string"
    },
    "recommend": {
      "type": "boolean",
      "default": false
    },
    "thumbnail": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::podcast-category.podcast-category",
      "inversedBy": "podcasts"
    },
    "attached_clips": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::podcast-upload.podcast-upload",
      "mappedBy": "podcast"
    }
  }
}
