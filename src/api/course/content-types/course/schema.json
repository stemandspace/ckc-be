{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "premium": {
      "type": "boolean",
      "default": false
    },
    "thumbnail": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "trailer": {
      "type": "text"
    },
    "modules": {
      "displayName": "Module",
      "type": "component",
      "repeatable": true,
      "component": "module.module"
    },
    "grade": {
      "type": "string",
      "required": true
    },
    "desc": {
      "type": "richtext"
    },
    "slug": {
      "type": "uid"
    },
    "mentor": {
      "type": "string"
    },
    "quiz": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::quiz.quiz"
    },
    "trending": {
      "type": "boolean",
      "default": false
    },
    "new": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "string"
    },
    "rewards": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::reward.reward",
      "inversedBy": "course"
    }
  }
}
